<div class="panel panel-default">
<div class="panel-heading">Your conversations</div>
<div class="panel-body">
<div class="containers">
<% @conversations.each do |conversation| %>
<% if !conversation.messages.nil? && !conversation.messages.last.nil? %>
<% other = conversation.sender == current_user ? conversation.recipient : conversation.sender %>
<%= link_to conversation_messages_path(conversation) do %>
<div class="row conversation">
<div class="col-md-2">
<%= image_tag avatar_url(other), class: "img-circle avatar-small" %>
</div>
<div class="col-md-2">
<%= other.fullname %>

<%= conversation.messages.last.message_time %>
</div>
<div class="col-md-8">
<%= conversation.messages.last.content %>
</div>
</div>
<% end %>
<% end %>
<% end %>
</div>
</div>
</div>