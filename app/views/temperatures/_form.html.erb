<%= form_for(@temperature) do |f| %>
  <% if @temperature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@temperature.errors.count, "error") %> prohibited this temperature from being saved:</h2>

      <ul>
      <% @temperature.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :date,class: 'form-control-label' %><br>
    <%= f.date_select :date,class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :temperature,class: 'form-control-label' %><br>
    <%= f.number_field :temperature,class: 'form-control' %>
  </div>

      <div class="form-group">
      <label>Measuring Unit</label>
      <%= f.select :measured, [ 'Centigrade','Fahrenheit' ], :prompt => 'Select Unit' %>
      </div>
	<br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>